@using ICMS.Lite.Repository.ViewModels

@model ICMS.Lite.Repository.ViewModels.AccountViewModel.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login | ICMS Lite </title>
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet" type="text/css">
    <link href="~/css/icons.css" rel="stylesheet" type="text/css">

</head>
<body style="background: url(../../images/1.jpg)">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12"></div>
            </div>

            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header" data-background-color="purple">
                            <h4 class="title"><span class="md-vpn-key"></span> Login</h4>
                            <p class="category">ICMS LTE</p>
                            @{
                                if (!string.IsNullOrEmpty(ViewBag.Response))
                                {
                                    <div class="alert alert-danger alert-dismissable" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        <strong>Error!</strong> @ViewBag.Response
                                    </div>
                                }
                            }
                        </div>
                  @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                     {
                        @Html.AntiForgeryToken()
                        <div class="card-content">
                                <div class="">
                                    <div class="col-md-12">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Username</label>
                                            @Html.TextBoxFor(m => m.UserId, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
                                            @*<input type="text" class="form-control">*@
                                        </div>
                                    </div>
                                </div>
                            <br/>
                                <div class="">
                                    <div class="col-md-12">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Password</label>
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                            @*<input type="text" class="form-control">*@
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <button class="btn btn-primary1 btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>

                                <div class="clearfix"></div>
                                <br /><br />
                        </div>
                    }
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    </div>

    <footer class="login-footer">
        © @DateTime.Now.Year. All rights reserved. ICMS Lite. <br>
        Powered by <a target="_blank" href="http://www.thepfs.biz">Precise Financial Systems.</a>
    </footer>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="~/js/jquery-3.2.1.min.js"></script>

    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/material.min.js" type="text/javascript"></script>
    <script src="~/js/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/js/material-dashboard.js"></script>

</body>
</html>
